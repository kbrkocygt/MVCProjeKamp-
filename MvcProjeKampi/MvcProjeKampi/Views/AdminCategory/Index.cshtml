@using EntittyLayer.Concrete
@model List<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="right_col" role="main">
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-12">
            <div class="x_panel">
                <div class="x_title">
                    <section class="content-header">
                        <div class="container-fluid">
                            <div class="row mb-2">
                                <div class="col-sm-6">

                                </div>
                                <div class="col-sm-6">
                                    <ol class="breadcrumb float-sm-right">
                                        <li class="breadcrumb-item"><a href="/AdminCategory/Home/">Home</a></li>
                                        <li class="breadcrumb-item active">Kategoriler</li>
                                    </ol>
                                </div>
                            </div>
                        </div><!-- /.container-fluid -->
                    </section>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" href="#">Settings 1</a>
                                <a class="dropdown-item" href="#">Settings 2</a>
                            </div>
                        </li>

                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">


                    <!-- start project list -->
                    <table class="table table-striped projects">
                        <thead>
                            <tr>
                                <th style="width: 1%">#</th>
                                <th style="width: 20%">Kategori Adı</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                                <th>Başlıklar</th>
                                @*<th style="width: 20%">#Edit</th>*@



                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th>@item.CategoryID</th>
                                    <td>@item.CategoryName</td>
                                    <td><a href="/AdminCategory/DeleteCategory/@item.CategoryID" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/AdminCategory/EditCategory/@item.CategoryID" class="btn btn-info">Güncelle</a></td>
                                    <td><a href="/Heading/Index/@item.CategoryID" class="btn btn-dark">Başlıklar</a></td>


                                </tr>
                            }

                        </tbody>
                    </table>
                    <!-- end project list -->
                    <a href="/AdminCategory/AddCategory/" class="btn btn-outline-dark">Yeni Kategori </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- /page content -->
<!-- footer content -->