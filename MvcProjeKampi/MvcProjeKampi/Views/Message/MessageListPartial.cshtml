@using EntittyLayer.Concrete
@model List<Message>


<a href="/Message/NewMessage/" class="btn btn-outline-primary btn-block mb-3">Yeni Mesaj Oluştur</a>
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Seçenekler</h3>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fa fa-star"></i>
            </button>
        </div>
    </div>
    <div class="card-body">
        <ul class="nav nav-pills flex-column">
            <li class="nav-item active">
                <a href="/Contact/Index/" class="nav-link">
                    <i class="fa fa-phone"></i> İletişim
                    <span class="badge bg-primary float-right">@ViewBag.contact</span>
                </a>
            </li>
            <li class="nav-item active">
                <a href="/Message/InBox/" class="nav-link">
                    <i class="fa fa-inbox"></i> Gelen Mesajlar
                    <span class="badge bg-primary float-right">@ViewBag.receiverMail</span>
                </a>
            </li>
            <li class="nav-item">
                <a href="/Message/SendBox/" class="nav-link">
                    <i class="fa fa-envelope"></i> Gönderilen Mesajlar
                    <span class="badge bg-primary float-right">@ViewBag.sendMail</span>
                </a>
            </li>
            <li class="nav-item">
                <a href="/Message/Draft/" class="nav-link">
                    <i class="fa fa-file"></i> Taslaklar
                    <span class="badge bg-primary float-right">@ViewBag.draftMail</span>
                </a>
            </li>
            <li class="nav-item">
                <a href="#" class="nav-link">
                    <i class="fa fa-filter"></i> Spam
                </a>
            </li>
            <li class="nav-item">
                <a href="#" class="nav-link">
                    <i class="fa fa-trash"></i> Çöp Kutusu
                </a>
            </li>
        </ul>
    </div>
    <!-- /.card-body -->
</div>
<!-- /.card -->
