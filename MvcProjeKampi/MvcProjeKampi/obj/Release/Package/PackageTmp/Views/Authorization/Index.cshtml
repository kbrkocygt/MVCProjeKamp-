@using EntittyLayer.Concrete
@model List<Admin>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<div class="right_col" role="main">
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-12">
            <div class="x_panel">
                <div class="x_title">
                    <section class="content-header">
                        <div class="container-fluid">
                            <div class="row mb-2">
                                <div class="col-sm-6">

                                </div>
                                <div class="col-sm-6">
                                    <ol class="breadcrumb float-sm-right">
                                        <li class="breadcrumb-item"><a href="/AdminCategory/Home/">Home</a></li>
                                        <li class="breadcrumb-item active">Adminler</li>
                                    </ol>
                                </div>
                            </div>
                        </div><!-- /.container-fluid -->
                    </section>
                    <table class="table table-bordered">
                        <tr>
                            <th>#</th>
                            <th>Kullanıcı Mail</th>
                            <th>Yetki</th>
                            <th>Status</th>
                            <th>Pasif Yap</th>
                            <th>Yetkisiz Değiştir</th>

                        </tr>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th>@item.AdminID</th>
                                <td>@item.AdminUserName</td>
                                <td>@item.AdminRol</td>
                                <td>Aktif</td>
                                <td><a href="#" class="btn btn-danger">Pasif Yap</a></td>
                                <td><a href="/Authorization/EditAdmin/@item.AdminID" class="btn btn-warning">Yetkisini Değiştir</a></td>


                            </tr>
                        }
                    </table>
                    <a href="/Authorization/AddAdmin/" class="btn btn-info">Yeni Admin Ekle </a>
                </div>
            </div>
        </div>
    </div>
</div>