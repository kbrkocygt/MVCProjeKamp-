@model MvcProjeKampi.Models.ViewModel
@{
    ViewBag.Title = "ContentDetails";
    Layout = "~/Views/Shared/Layout/BlogHome.cshtml";
}

<div class="page-title wb">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
                <h2><i class="fa fa-leaf bg-green"></i> Blog</h2>
            </div><!-- end col -->
            <div class="col-lg-4 col-md-4 col-sm-12 hidden-xs-down hidden-sm-down">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Blog</li>
                </ol>
            </div><!-- end col -->
        </div><!-- end row -->
    </div><!-- end container -->
</div><!-- end page-title -->

            <div class="col-lg-9 col-md-12 col-sm-12 col-xs-12">
                <div class="page-wrapper">
                    <div class="blog-title-area">
                        @foreach (var item in Model.Contents)
                        {
                            <span class="color-green"><a href="garden-category.html" title="">@item.Heading.Category.CategoryName</a></span>
                            <h3>@item.Heading.HeadingName</h3>
                            <div class="blog-meta big-meta">
                                <small><a href="garden-single.html" title="">@(((DateTime)item.ContentDate).ToString("dd.MMM.yyyy"))</a></small>
                                <small><a href="blog-author.html" title="">by @item.Writer.WriterName @item.Writer.WriterSurname</a></small>
                              
                            </div><!-- end meta -->
                        }

                      
                    </div><!-- end title -->
                    <div class="blog-content">
                        @foreach (var item in Model.Contents)
                        {
                        <div class="pp">

                            <h3><strong>@item.Heading.HeadingName</strong></h3>
                            <img src="@item.ContentImage" alt="" class="img-fluid img-fullwidth">
                            <p>@item.ContentValue </p>
                        </div><!-- end pp -->
                       
                          

                        }
                    </div><!-- end content -->
                    <div class="blog-title-area">
                        <div class="tag-cloud-single">
                            <span>Başlıklar</span>
                            @foreach (var item in Model.Contents)
                            {
                                <small><a href="#" title="">@item.Heading.HeadingName</a></small>
                               
                            }

                        </div><!-- end meta -->
                       
                    </div><!-- end title -->
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="banner-spot clearfix">
                                <div class="banner-img">
                                    <img src="upload/banner_01.jpg" alt="" class="img-fluid">
                                </div><!-- end banner-img -->
                            </div><!-- end banner -->
                        </div><!-- end col -->
                    </div><!-- end row -->
                  
                    <hr class="invis1">
                    <div class="custombox clearfix">
                        <h4 class="small-title">3 Yorum</h4>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="comments-list">
                                    <div class="media">
                                        <a class="media-left" href="#">
                                            <img src="upload/author.jpg" alt="" class="rounded-circle">
                                        </a>
                                        <div class="media-body">
                                            <h4 class="media-heading user_name">Amanda Martines <small>5 gün önce</small></h4>
                                            <p>Exercitation photo booth stumptown tote bag Banksy, elit small batch freegan sed. Craft beer elit seitan exercitation, photo booth et 8-bit kale chips proident chillwave deep v laborum. Aliquip veniam delectus, Marfa eiusmod Pinterest in do umami readymade swag. Selfies iPhone Kickstarter, drinking vinegar jean.</p>
                                            <a href="#" class="btn btn-primary btn-sm">Reply</a>
                                        </div>
                                    </div>
                                    <div class="media">
                                        <a class="media-left" href="#">
                                            <img src="upload/author_01.jpg" alt="" class="rounded-circle">
                                        </a>
                                        <div class="media-body">
                                            <h4 class="media-heading user_name">Baltej Singh <small>5 days ago</small></h4>
                                            <p>Drinking vinegar stumptown yr pop-up artisan sunt. Deep v cliche lomo biodiesel Neutra selfies. Shorts fixie consequat flexitarian four loko tempor duis single-origin coffee. Banksy, elit small.</p>
                                            <a href="#" class="btn btn-primary btn-sm">Reply</a>
                                        </div>
                                    </div>
                                    <div class="media last-child">
                                        <a class="media-left" href="#">
                                            <img src="upload/author_02.jpg" alt="" class="rounded-circle">
                                        </a>
                                        <div class="media-body">
                                            <h4 class="media-heading user_name">Marie Johnson <small>5 days ago</small></h4>
                                            <p>Kickstarter seitan retro. Drinking vinegar stumptown yr pop-up artisan sunt. Deep v cliche lomo biodiesel Neutra selfies. Shorts fixie consequat flexitarian four loko tempor duis single-origin coffee. Banksy, elit small.</p>
                                            <a href="#" class="btn btn-primary btn-sm">Reply</a>
                                        </div>
                                    </div>
                                </div>
                            </div><!-- end col -->
                        </div><!-- end row -->
                    </div><!-- end custom-box -->
                    <hr class="invis1">
                    <div class="custombox clearfix">
                        <h4 class="small-title">Yorumlarınızı bekliyorum</h4>
                        <div class="row">
                            <div class="col-lg-12">
                                <form class="form-wrapper">
                                    <input type="text" class="form-control" placeholder="Adınız">
                                    <input type="text" class="form-control" placeholder="Mail adresi">
                                    <input type="text" class="form-control" placeholder="Website">
                                    <textarea class="form-control" placeholder="Yorumunuz"></textarea>
                                    <button type="submit" class="btn btn-primary">Yorum Yap</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div><!-- end page-wrapper -->
            </div><!-- end col -->

         
   