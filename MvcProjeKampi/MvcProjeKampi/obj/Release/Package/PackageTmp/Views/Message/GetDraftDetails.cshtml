@model EntittyLayer.Concrete.Message
@{
    ViewBag.Title = "GetDraftDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>

<body class="hold-transition sidebar-mini">
    <div class="right_col" role="main">
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12">
                <div class="x_panel">
                    <div class="x_title">
                        <section class="content-header">
                            <div class="container-fluid">
                                <div class="row mb-2">
                                    <div class="col-sm-6">

                                    </div>
                                    <div class="col-sm-6">
                                        <ol class="breadcrumb float-sm-right">
                                            <li class="breadcrumb-item"><a href="/AdminCategory/Home/">Home</a></li>
                                            <li class="breadcrumb-item active">Taslak</li>
                                        </ol>
                                    </div>
                                </div>
                            </div><!-- /.container-fluid -->
                        </section>
                        <section class="content">
                            <div class="container-fluid">
                                <div class="row">
                                    @Html.Action("ContactSideBarPartial", "Contact")
                                    <!-- /.col -->
                                    <div class="col-md-9">
                                        <div class="card card-primary card-outline">
                                            <div class="card-header">
                                                <h3 class="card-title">Mesajı Oku</h3>
                                            </div>
                                            <!-- /.card-header -->
                                            <div class="card-body p-0">
                                                <div class="mailbox-read-info">
                                                    <h5>Konu: @Html.DisplayFor(x => x.Subject)</h5>
                                                    <br />
                                                    <h6>
                                                        Alıcı: @Html.DisplayFor(x => x.RecevierMail)
                                                        <span class="mailbox-read-time float-right">
                                                            @Model.MessageDate.ToString("dd-MMM-yyyy")
                                                        </span>
                                                    </h6>
                                                </div>
                                                <!-- /.mailbox-read-info -->
                                                <!-- /.mailbox-controls -->
                                                <div class="mailbox-read-message">
                                                    <p>@Html.Raw(Model.MessageContent)</p>
                                                </div>
                                                <!-- /.mailbox-read-message -->
                                            </div>
                                            <!-- /.card-footer -->
                                        </div>
                                        <!-- /.card -->
                                    </div>
                                    <!-- /.col -->
                                </div>
                                <!-- /.row -->
                            </div>
                        </section>
                    </div>
                    <!-- /.row -->


                </div>
            </div>
        </div>
    </div>
</body>
</html>
